<extension type="package" version="3.4" method="upgrade">
    <name>JoomCCK</name>
    <packagename>JoomCCK</packagename>
    <version>##VERSION##</version>
    <url>https://www.joomcoder.com</url>
    <creationDate>27/03/2023</creationDate>
