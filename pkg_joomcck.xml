    <author>JoomCoder</author>
    <packager>JoomCCK</packager>
    <packagerurl>https://www.joomcoder.com</packagerurl>
    <description>JoomCCK Full package</description>
    <scriptfile>pkg_joomcck.script.php</scriptfile>
    <blockChildUninstall>true</blockChildUninstall>
    <files>

        <!-- install libraries -->
        <folder type="library" id="mint">libraries/mint</folder>

        <!-- Install components -->
        <folder type="component" id="com_joomcck">components/com_joomcck</folder>

        <!-- Install plugins -->
        <folder enable="1" type="plugin" id="joomcck" group="system">plugins/plg_system_joomcck</folder>
        <folder enable="1" type="plugin" id="content_glossary" group="content">plugins/plg_content_glossary</folder>
        <folder enable="1" type="plugin" id="content_joomcck" group="content">plugins/plg_content_joomcck</folder>
        <folder enable="1" type="plugin" id="finder_joomcck" group="finder">plugins/plg_finder_joomcck</folder>
        <folder enable="1" type="plugin" id="search_joomcck" group="search">plugins/plg_search_joomcck</folder>
        <folder enable="1" type="plugin" id="formatter_xml" group="mint">plugins/plg_mint_formatter_xml</folder>
        <folder enable="1" type="plugin" id="formatter_csv" group="mint">plugins/plg_mint_formatter_csv</folder>
        <folder enable="1" type="plugin" id="formatter_ini" group="mint">plugins/plg_mint_formatter_ini</folder>
        <folder enable="1" type="plugin" id="formatter_joomlaupdate" group="mint">plugins/plg_mint_formatter_joomlaupdate</folder>
        <folder enable="1" type="plugin" id="formatter_json" group="mint">plugins/plg_mint_formatter_json</folder>

        <!-- Install modules -->
        <folder type="module" id="mod_joomcck_category" client="site">modules/mod_joomcck_category</folder>
        <folder type="module" id="mod_joomcck_filters" client="site">modules/mod_joomcck_filters</folder>
        <folder type="module" id="mod_joomcck_followers" client="site">modules/mod_joomcck_followers</folder>
        <folder type="module" id="mod_joomcck_ifollow" client="site">modules/mod_joomcck_ifollow</folder>
        <folder type="module" id="mod_joomcck_notifications" client="site">modules/mod_joomcck_notifications</folder>
        <folder type="module" id="mod_joomcck_participants" client="site">modules/mod_joomcck_participants</folder>
        <folder type="module" id="mod_joomcck_records" client="site">modules/mod_joomcck_records</folder>
        <folder type="module" id="mod_joomcck_sectionstatistics" client="site">modules/mod_joomcck_sectionstatistics</folder>
        <folder type="module" id="mod_joomcck_submitbutton" client="site">modules/mod_joomcck_submitbutton</folder>
        <folder type="module" id="mod_joomcck_tagcloud" client="site">modules/mod_joomcck_tagcloud</folder>
        <folder type="module" id="mod_joomcck_userstatistics" client="site">modules/mod_joomcck_userstatistics</folder>
        <folder type="module" id="mod_joomcck_video" client="site">modules/mod_joomcck_video</folder>
    </files>

    <dlid/>

    <updateservers>
        <server type="extension" priority="1" name="JoomCCK Pro Update">
            <![CDATA[https://www.joomcoder.com/index.php?option=com_mediastore&task=pluginTask&plugin=joomla&subtask=server&id=24&j=4]]>
        </server>
    </updateservers>
</extension>
