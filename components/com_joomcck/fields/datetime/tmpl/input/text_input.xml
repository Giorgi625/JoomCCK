					<option value="m.d.y">01.31.2007</option>
					<option value="d/m/y h:s">31/01/2007 23:59</option>
					<option value="m/d/y h:s">01/31/2007 23:59</option>
					<option value="d-m-y h:s">31-01-2007 23:59</option>
					<option value="m-d-y h:s">01-31-2007 23:59</option>
					<option value="d.m.y h:s">31.01.2007 23:59</option>
					<option value="m.d.y h:s">01.31.2007 23:59</option>
